{
  "name": "ts-template",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "engines": {
    "node": "20.0.0"
  },
  "packageManager": "npm@9.6.6",
  "scripts": {
    "start": "NODE_ENV=production node build/index.js",
    "dev": "ts-node-dev src/index.ts --cls --rs",
    "test": "mocha",
    "test:watch": "mocha --watch",
    "test:coverage": "nyc npm test",
    "test:report": "nyc --reporter=html --all npm test",
    "prepare": "husky install",
    "build": "rimraf build/ && tsc -p tsconfig.json",
    "lint:check": "eslint \"src/**/*.ts\" --color",
    "lint": "eslint \"src/**/*.ts\" --fix --quiet",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "format": "prettier --write --cache \"src/**/*.ts\" --loglevel error",
    "clean": "rimraf build node_muodules"
  },
  "keywords": [],
  "author": "Juan Sebasti√°n Agudelo @juansacdev <juansac.me@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "1.0.2",
    "@types/chai": "4.3.5",
    "@types/mocha": "10.0.1",
    "@types/node": "20.4.4",
    "@typescript-eslint/eslint-plugin": "6.1.0",
    "@typescript-eslint/parser": "6.1.0",
    "chai": "4.3.7",
    "eslint": "8.45.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "5.0.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "mocha": "10.2.0",
    "nyc": "15.1.0",
    "prettier": "3.0.0",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "rimraf": "5.0.1"
  },
  "lint-staged": {
    "*.ts": [
      "npm run format",
      "npm run lint"
    ]
  }
}
